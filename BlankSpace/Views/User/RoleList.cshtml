@model List<BlankSpace.ViewModels.RoleTypeVm>

<p class="h2" style="text-align:center;">Role List<br /><div style="border-bottom:1px solid #686868"></div> </p>

@if (ViewBag.Error != null)
{<div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial No
            </th>
            <th class=" h3 ">
                Role Name
            </th>

            <th class=" h3  ">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class=" h4  ">@item.Serial</td>
                <td class=" h4  ">@item.RoleName</td>

                <td class=" h4  ">
                    <a asp-action="UpdateRole" asp-controller="User" asp-route-id="@item.RoleTypeId"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;

                    <a asp-action="DeleteRole" asp-controller="User" asp-route-id="@item.RoleTypeId"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
