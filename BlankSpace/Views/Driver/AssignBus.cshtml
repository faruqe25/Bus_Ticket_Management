@model BlankSpace.ViewModels.AssignedDriverVm

@{
    ViewData["Title"] = "AssignBus";
}




<div class="row">
    @if(ViewBag.SMS!=null)
    {
    <div class="alert alert-danger" role="alert">
       @ViewBag.SMS
    </div>
    }
    <div class="col-md-4 col-md-offset-4">

        <h4>Assign Driver to Bus</h4>
        <hr />
        <form asp-action="AssignBus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BusId" class="control-label h4"></label>
                <select asp-items="@ViewBag.Bus" asp-for="BusId" class="form-control">
                    <option hidden disabled selected>Please Select Bus</option>
                </select>
                <span asp-validation-for="BusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverId" class="control-label h4"></label>
                <select asp-items="@ViewBag.Driver" asp-for="DriverId" class="form-control">
                    <option hidden disabled selected>Please Select Driver</option>
                </select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
        <div>
            <a asp-action="AssignBusList">Back to List</a>
        </div>
    </div>
</div>



