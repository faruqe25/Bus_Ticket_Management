    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CoachName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CoachName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TotalSeat)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalSeat)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BusNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BusNumber)
        </dd>

    </dl>
