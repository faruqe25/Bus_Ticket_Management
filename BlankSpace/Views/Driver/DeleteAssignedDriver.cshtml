@model BlankSpace.ViewModels.AssignedDriverVm

@{
    ViewData["Title"] = "DeleteAssignedDriver";
}

<h2 class="text-center">Delete Assigned Driver </h2>

<h3>Are you sure you want to delete this?</h3>
