@model BlankSpace.ViewModels.ScheduleVm

@{
    ViewData["Title"] = "Update Schedule";
}





<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2>Update Schedule</h2>
        <hr />
        <form asp-action="UpdateSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ScheduleId" type="hidden" />
            <div class="form-group">
                <label asp-for="StartingFrom" class="control-label h4"></label>
                <input asp-for="StartingFrom" class="form-control" />
                <span asp-validation-for="StartingFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label h4"></label>
                <input asp-for="Destination" class="form-control" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label h4"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
        <div>
            <a asp-action="ScheduleList">Back to List</a>
        </div>

    </div>
</div>


