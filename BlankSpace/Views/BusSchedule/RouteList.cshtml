@model List<BlankSpace.ViewModels.PlaceVm>

<p class="h2" style="text-align:center;">Route List<br /><div style="border-bottom:1px solid #686868"></div> </p>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial No
            </th>
            <th class=" h3 ">
                Place Name
            </th>
            
            <th class=" h3  ">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class=" h4  ">@item.Serial</td>
                <td class=" h4  ">@item.PlaceName</td>
                
                <td class=" h4  ">
                    <a asp-action="UpdateRoute" asp-controller="BusSchedule" asp-route-id="@item.PlaceVmId"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    
                    <a asp-action="DeleteRoute" asp-controller="BusSchedule" asp-route-id="@item.PlaceVmId"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
