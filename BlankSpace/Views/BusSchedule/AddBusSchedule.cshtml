@model BlankSpace.ViewModels.BusScheduleVm

@{
    ViewData["Title"] = "AddBusSchedule";
}

<h2 class="text-center">Add Bus Schedule</h2>


<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="AddBusSchedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="BusId" class="control-label"></label>
                <select asp-items="@ViewBag.Bus" asp-for="BusId" class="form-control" >
                    <option >Please Select Coach</option>
                </select>
                <span asp-validation-for="BusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketPrice" class="control-label"></label>
                <input asp-for="TicketPrice" class="form-control" />
                <span asp-validation-for="TicketPrice" class="text-danger"></span>
            </div>
           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

