@model List<BlankSpace.ViewModels.BusScheduleVm>

<p class="h2" style="text-align:center;">Bus Schedule List<br /><div style="border-bottom:1px solid #686868"></div> </p>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th class="h3">
                Serial No
            </th>
            <th class=" h3 ">
                Bus Name
            </th><th class=" h3 ">
                Time
            </th>
            <th class=" h3  ">
                Start From
            </th> 
            <th class=" h3  ">
                Destination
            </th>
            <th class=" h3  ">
                Ticket Price
            </th>

            <th class=" h3  ">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class=" h4  ">@item.Serial</td>
                <td class=" h4  ">@item.CoachName</td>
                <td class=" h4  ">@item.Time</td>
                <td class=" h4  ">@item.StartingFrom</td>
                <td class=" h4  ">@item.Destination</td>
                <td class=" h4  ">@item.TicketPrice Tk only</td>
                <td class=" h4  ">
                    <a asp-action="UpdateSchedule" asp-controller="BusSchedule" asp-route-id="@item.BusScheduleId"><i class="fa fa-pencil-square" style="font-size:25px;color:green"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="DetailsSchedule" asp-controller="BusSchedule" asp-route-id="@item.BusScheduleId"><i class="fa fa-info-circle" style="font-size:25px;color:dodgerblue"></i></a>
                    &nbsp;&nbsp;&nbsp;
                    <a asp-action="DeleteSchedule" asp-controller="BusSchedule" asp-route-id="@item.BusScheduleId"><i class="fa fa-trash" style="font-size:25px;color:red"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
